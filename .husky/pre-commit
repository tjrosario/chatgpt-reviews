#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Check TypeScript types
echo "🔧 Checking TypeScript types..."
npm run type-check

# Run tests
echo "🧪 Running tests..."
npm test -- --run --watchAll=false --coverage=false

echo "✅ Pre-commit checks completed!"